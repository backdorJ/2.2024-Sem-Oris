@model string

@{
    ViewData["Title"] = "Home Page";
}

<style>
    #responseFrame {
        width: 100%;
        height: 400px; /* Вы можете изменить размер iframe */
        border: none; /* Убираем рамку */
        display: none; /* Изначально скрываем iframe */
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form id="getForm" action="http://localhost:5091/data" method="get" target="responseFrame">
        <button>click</button>
    </form>
    <iframe id="data" name="responseFrame"></iframe>
</div>

@section Scripts {
    <script>
       document.getElementById('getForm').addEventListener('submit', function() {
           document.getElementById('data').style.display = 'block';
        });
    
    </script>
}